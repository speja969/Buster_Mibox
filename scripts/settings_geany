wget https://raw.github.com/geany/geany-themes/master/colorschemes/mc.conf -O ~/.config/geany/colorschemes/mc.conf
wget https://raw.github.com/geany/geany-themes/master/colorschemes/retro.conf -O ~/.config/geany/colorschemes/retro.conf
